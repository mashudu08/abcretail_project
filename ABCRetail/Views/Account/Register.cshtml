@model ABCRetail.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <!-- Form Section -->
            <div class="col-sm-6 text-black">
                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form asp-action="Register" method="post" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-outline mb-4">
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Name" />
                            <label class="form-label" asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Email address" />
                            <label class="form-label" asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Phone number" />
                            <label class="form-label" asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" />
                            <label class="form-label" asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm Password" />
                            <label class="form-label" asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-info btn-lg btn-block">Register</button>
                        </div>

                        <p class="small mb-5 pb-lg-2">Already have an account? <a href="@Url.Action("Login", "Account")" class="link-info">Login here</a></p>

                    </form>
                </div>
            </div>

            <!-- Image Section -->
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/images/login.png"
                     alt="Registration image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
