@model ABCRetail.ViewModel.ContractsViewModel

<h2 class="mb-4">Contracts</h2>

<div class="card mb-4">
    <div class="card-header">
        <h4 class="mb-0">Upload New Contract</h4>
    </div>
    <div class="card-body">
        <form asp-action="UploadContract" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <input type="file" name="file" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Upload Contract</button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Existing Contracts</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">File Name</th>
                    <th scope="col">File Size</th>
                    <th scope="col">Uploaded Date</th>
                    <th scope="col">Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contract in Model.Contracts)
                {
                    <tr>
                        <td>@contract.FileName</td>
                        <td>@contract.FileSize</td>
                        <td>@contract.UploadedDate.ToString("g")</td>
                        <td>
                            <a href="@Url.Action("DownloadContract", new { fileName = contract.FileName })" class="btn btn-sm btn-success">
                                Download
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
