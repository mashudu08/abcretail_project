@model ABCRetail.ViewModel.ProductViewModel
@using System.Globalization

<h1>@Model.ProductName</h1>

<div>
    <img src="@Model.ImageUrl" alt="@Model.ProductName" style="width:400px;height:auto;" />
</div>

<p>@Model.Description</p>

<p>Price: @Model.Price.ToString("C", new CultureInfo("en-ZA"))</p>

<p>Stock Availability: @(Model.StockLevel > 0 ? "In Stock" : "Out of Stock")</p>

<!-- If customer reviews are implemented, display them here -->

<a asp-action="Index" class="btn btn-secondary">Back to Product List</a>