@model ABCRetail.ViewModel.UploadImageViewModel

@{
    ViewData["Title"] = "Upload Image";
}

<h1>Upload Product Image</h1>

<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <img src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Upload Image</button>
</form>

@if (ViewBag.UploadError != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.UploadError
    </div>
}
